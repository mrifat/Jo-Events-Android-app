<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.joevents"
  android:versionCode="1"
  android:versionName="1.0" >
  <uses-sdk
    android:minSdkVersion="8"
    android:targetSdkVersion="16" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.CAMERA" />
  <uses-feature android:name="android.hardware.camera" />
  <uses-feature android:name="android.hardware.camera.autofocus" />
  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme" >
    <activity
      android:name="com.example.joevents.LoginActivity"
      android:label="@string/app_name" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="com.example.joevents.CompanyUserActivity"
      android:label="@string/title_activity_company_user" >
    </activity>
    <activity
      android:name="com.example.joevents.UserActivity"
      android:label="@string/title_activity_user" >
    </activity>
    <activity
      android:name="com.example.joevents.UserTicketsActivity"
      android:label="@string/title_activity_user_tickets" >
    </activity>
    <activity
      android:name="com.example.joevents.ScannerActivity"
      android:label="@string/title_activity_scanner" >
    </activity>
    <activity
      android:name="com.example.joevents.LoginRedirect"
      android:label="@string/title_activity_login_redirect" >
    </activity>
    <activity
      android:name="com.example.joevents.TestActivity"
      android:label="@string/title_activity_test" >
    </activity>
    <activity
      android:name="com.example.joevents.UsersActivity"
      android:label="@string/title_activity_users" >
    </activity>
  </application>
</manifest>
